{
  "name": "criminal-face-recognition-system-mern",
  "version": "1.0.0",
  "description": "Full-stack criminal face recognition system using the MERN stack.",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "data:import": "npm run import --prefix backend",
    "data:destroy": "npm run destroy --prefix backend"
  },
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}

